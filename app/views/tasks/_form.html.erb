<% @task = Task.new %>
<%= form_with(model: @task, id: "#{dom_id(@task)}_form", class:"d-flex justify-content-center align-items-center mb-4") do |form| %>   
  <% if @task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this @task from being saved:</h2>
      <ul>
        <% @task.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-outline flex-fill">
    <%= form.text_field :description, placeholder: "Add new task", class:"form-control" %>
